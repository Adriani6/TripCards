<md-toolbar class="md-hue-2" style="background: #444140;">
      <div class="md-toolbar-tools">
        <md-button class="md-icon-button" aria-label="Settings" ng-click="fabClick()">
          <md-icon>arrow_back</md-icon>
        </md-button>
        <h2>
          <span>Back</span>
        </h2>
        <span flex></span>
        <md-button class="md-icon-button" aria-label="Save">
          <md-icon>style</md-icon>
        </md-button>
        <h2>
          <span style="cursor: pointer;">Get TravelCards!</span>
        </h2>
        <md-button class="md-icon-button" aria-label="More">
          <md-icon>more_vert</md-icon>
        </md-button>
      </div>
    </md-toolbar>
    <div flex layout="row" layout-align="center">
    <div flex="50" style="background: #EE6C4D;">
      <span style="margin-left: 15px;"><h3 style="margin-top: 0; margin-left: 15px;">Planner</h3></span>
      <span style="margin-left: 15px;">
        From: <md-datepicker ng-model="startDate" md-placeholder="Enter date"></md-datepicker>
        Till: <md-datepicker ng-model="finishDate" md-placeholder="Enter date"></md-datepicker>
      </span>
      <span style="float: right; margin-right: 15px;">Your trip will take: {{totalTime}} (Approx.)</span>
    </div>
    </div>
    <div flex layout="row" layout-align="center">
      <md-list flex="45">
        <md-subheader class="md-no-sticky">Your TravelCards</md-subheader>
        <md-list-item finished-loading-items class="md-3-line" ng-repeat="att in basketAttractions" ng-controller="ratingController">
        <md-checkbox ng-model="att.selected" ng-click=""></md-checkbox>
          <div class="md-list-item-text" layout="column">
            <h3>{{att.name}}</h3>
            <p>{{att.location}}</p>
          </div>
          <md-button ng-disabled="true" ng-if="att.rating" class="md-secondary">Rating: {{att.rating}}</md-button>
          <md-button class="md-secondary">H: <input flex type="number" ng-model="hour" ng-click="updateTime(att, $event)" max="24" min="0" aria-label="volume" aria-controls="volume-slider"></md-button>
          <md-button class="md-secondary">M: <input flex type="number" ng-model="minute" ng-click="updateMinutes(att, $event)" max="59" min="0" aria-label="volume" aria-controls="volume-slider"></md-button>
          <md-button class="md-secondary" ng-click="openMap(att)"><i class="material-icons">filter_none</i> Show Map</md-button>
          <md-button class="md-secondary" ng-click="remove(att)"><i class="material-icons">delete</i></md-button>
          <md-divider></md-divider>
        </md-list-item>
      </md-list>
</div>